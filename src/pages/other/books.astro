<Layout title="Books | Farooq Q." description="Books I've read with ratings and thoughts">
  <main class="prose prose-sm md:prose-base lg:prose-lg prose-invert max-w-none">
    <p>Books I've read. Hover for more.</p>
    <br>
    
    <h2 class="text-lg mb-2">October 2025</h2>
    <ul class="book-list">
      {books.slice(0, 3).map((book) => (
        <li class="book-item" data-book={JSON.stringify(book)}>
          <span class="book-trigger"><em>{book.title}</em>, {book.author}</span>
        </li>
      ))}
    </ul>
    <br>
    
    <h2 class="text-lg mb-2">All Books</h2>
    <ul class="book-list">
      {books.slice(3).map((book) => (
        <li class="book-item" data-book={JSON.stringify(book)}>
          <span class="book-trigger"><em>{book.title}</em>, {book.author}</span>
        </li>
      ))}
    </ul>
  </main>

  <style is:global>
    .book-item {
      position: relative;
      transition: all 0.2s ease;
    }

    .book-item:hover {
      color: inherit;
    }

    .book-trigger {
      display: inline-block;
      cursor: pointer;
    }

    .book-tooltip {
      position: absolute;
      top: calc(100% + 12px);
      left: 0;
      transform: translateY(-20px) scale(0.8);
      background: #F2F0EF !important;
      color: #0a0a0a !important;
      border: 1px solid #D4D1CE !important;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.35) !important;
      z-index: 1000;
      width: 480px;
      max-width: min(90vw, 560px);
      opacity: 0;
      visibility: hidden;
      transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
      pointer-events: none;
      backdrop-filter: blur(8px);
    }

    .dark .book-tooltip {
      background: #222222 !important;
      color: #e5e5e5 !important;
      border-color: #404040 !important;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5) !important;
    }
    
    .book-tooltip.show {
      opacity: 1 !important;
      visibility: visible !important;
      transform: translateY(0) scale(1) !important;
    }

    .tooltip-content {
      display: flex;
      gap: 20px;
      align-items: flex-start;
    }

    .tooltip-text {
      flex: 1;
      min-width: 0;
    }

    .tooltip-image {
      width: 100px;
      height: 150px;
      object-fit: cover;
      border-radius: 8px;
      flex-shrink: 0;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
      will-change: transform;
      transform: translateZ(0);
    }

    .book-rating {
      display: flex;
      gap: 2px;
      margin-bottom: 12px;
    }

    .star {
      color: #fbbf24 !important;
      font-size: 18px !important;
    }

    .star.empty {
      color: #6b7280 !important;
    }

    .book-description {
      font-size: 14px !important;
      line-height: 1.5 !important;
      color: #0a0a0a !important;
      margin: 0 !important;
    }
    
    .dark .book-description {
      color: #e5e7eb !important;
    }
  </style>

  <script define:vars={{ books }}>
    // Preload all book images immediately for instant display
    const preloadImages = () => {
      books.forEach(book => {
        const img = new Image();
        img.src = book.image;
      });
    };
    
    // Start preloading as soon as possible
    preloadImages();
    
    document.addEventListener('DOMContentLoaded', function() {
      const bookItems = document.querySelectorAll('.book-item');
      
      bookItems.forEach(item => {
        const dataBook = item.getAttribute('data-book');
        if (!dataBook) return;
        
        const bookData = JSON.parse(dataBook);
        let tooltip = null;
        const trigger = item.querySelector('.book-trigger');
        if (!trigger) return;
        
        function showTooltip() {
          if (!tooltip) {
            // Create tooltip element only when hovering
            tooltip = document.createElement('div');
            tooltip.className = 'book-tooltip';
            
            // Create stars
            const stars = Array.from({length: 5}, (_, i) => 
              `<span class="star ${i < bookData.rating ? '' : 'empty'}">â˜…</span>`
            ).join('');
            
            // Preload image for instant display
            const img = new Image();
            img.src = bookData.image;
            
            tooltip.innerHTML = `
              <div class="tooltip-content">
                <div class="tooltip-text">
                  <div class="book-rating">${stars}</div>
                  <div class="book-description">${bookData.description}</div>
                </div>
                <img src="${bookData.image}" alt="${bookData.title}" class="tooltip-image" loading="eager" decoding="sync" onerror="this.style.display='none'">
              </div>
            `;
            
            // Set initial hidden state with inline styles
            tooltip.style.opacity = '0';
            tooltip.style.transform = 'translateY(-8px) scale(0.95)';
            tooltip.style.visibility = 'hidden';
            
            item.appendChild(tooltip);
            
            // Force a reflow
            tooltip.offsetHeight;
            
            // Show with animation
            tooltip.style.visibility = 'visible';
            tooltip.style.transition = 'all 0.15s cubic-bezier(0.4, 0, 0.2, 1)';
            
            requestAnimationFrame(() => {
              if (tooltip) {
                tooltip.style.opacity = '1';
                tooltip.style.transform = 'translateY(0) scale(1)';
              }
            });
          }
        }
        
        function hideTooltip() {
          if (tooltip) {
            // Animate out
            tooltip.style.opacity = '0';
            tooltip.style.transform = 'translateY(-8px) scale(0.95)';
            
            setTimeout(() => {
              if (tooltip) {
                tooltip.remove();
                tooltip = null;
              }
            }, 150);
          }
        }
        
        // Desktop hover events (narrowed to trigger)
        trigger.addEventListener('mouseenter', showTooltip);
        item.addEventListener('mouseleave', hideTooltip);
        
        // Mobile touch events (narrowed to trigger, no preventDefault to allow scroll)
        trigger.addEventListener('touchstart', function(e) {
          showTooltip();
        }, { passive: true });
        
        // Hide tooltip when touching elsewhere
        document.addEventListener('touchstart', function(e) {
          if (e.target && !item.contains(e.target)) {
            hideTooltip();
          }
        });
      });
    });
  </script>
</Layout>
