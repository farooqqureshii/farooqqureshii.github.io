  <script>
    // Footer SVG cycler - cycle through 5 SVGs every 600ms
    (function runSvgCycler() {
      const cycler = document.querySelector('.footer-svg-cycler');
      if (!cycler) return;
      const svgs = cycler.querySelectorAll('.footer-cycler-svg');
      if (svgs.length === 0) return;
      let idx = 0;
      svgs[0].classList.add('!opacity-100');
      setInterval(() => {
        svgs[idx].classList.remove('!opacity-100');
        idx = (idx + 1) % svgs.length;
        svgs[idx].classList.add('!opacity-100');
      }, 600);
    })();

    function updateOttawaTime() {
      const ottawaTime = new Date().toLocaleTimeString('en-CA', {
        timeZone: 'America/Toronto',
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit',
        hour12: false
      });
      const timeEl = document.getElementById('ottawa-time');
      if (timeEl) timeEl.textContent = ottawaTime;
      const weatherBlock = document.getElementById('ottawa-weather');
      if (weatherBlock) weatherBlock.classList.remove('opacity-0');
    }
    async function updateOttawaWeather() {
      try {
        const res = await fetch('https://api.open-meteo.com/v1/forecast?latitude=45.4215&longitude=-75.6972&current=temperature_2m&timezone=America/Toronto');
        const data = await res.json();
        const temp = Math.round(data.current?.temperature_2m ?? 0);
        const tempEl = document.getElementById('ottawa-temp');
        if (tempEl) tempEl.textContent = temp + '°C';
      } catch {
        const tempEl = document.getElementById('ottawa-temp');
        if (tempEl) tempEl.textContent = '—°C';
      }
    }
    function initFooter() {
      updateOttawaTime();
      setInterval(updateOttawaTime, 1000);
      updateOttawaWeather();
    }
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initFooter);
    } else {
      requestAnimationFrame(initFooter);
    }
  </script>
</footer>
