---
import SpotifyNowPlaying from './SpotifyNowPlaying.astro';
---

<footer class="mt-12">
  <hr class="border-zinc-200 dark:border-zinc-700 mb-4" />
  <div class="flex justify-between text-xs text-zinc-500">
    <span>crafted with care by farooq</span>
    <SpotifyNowPlaying />
  </div>
  <div class="flex justify-between text-xs text-zinc-500 mt-1">
    <span id="calgary-time"></span>
    <span></span>
  </div>
  <script>
    function updateCalgaryTime() {
      const now = new Date();
      // Calgary is in Mountain Time (UTC-7 or UTC-6 with DST)
      const options = { hour: '2-digit', minute: '2-digit', hour12: false, timeZone: 'America/Edmonton' };
      const time = now.toLocaleTimeString('en-CA', options);
      const el = document.getElementById('calgary-time');
      if (el) el.innerHTML = `${time} | <i>calgary</i>`;
    }
    updateCalgaryTime();
    setInterval(updateCalgaryTime, 60000);
  </script>
</footer> 