---
import "../styles/global.css";
const { title } = Astro.props;
---

<div class="max-w-xl mx-auto p-4 font-sans text-zinc-900 antialiased transition-colors dark:bg-zinc-900 dark:text-zinc-200">
  <h1 class="mb-5 text-xl font-medium">{title}</h1>
  <article class="slide-in">
    <slot />
  </article>
</div> 